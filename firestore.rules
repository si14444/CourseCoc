rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - 사용자는 자신의 데이터만 수정 가능
    match /users/{userId} {
      allow read: if true; // 모든 사용자의 프로필은 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Courses collection - 로그인한 사용자만 작성, 작성자만 수정/삭제
    match /courses/{courseId} {
      allow read: if true; // 모든 코스는 읽기 가능
      allow create: if request.auth != null
        && request.auth.uid == resource.data.authorId;
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.authorId;
    }

    // Comments collection - 로그인한 사용자만 작성, 작성자만 수정/삭제
    match /comments/{commentId} {
      allow read: if true; // 모든 댓글은 읽기 가능
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.authorId;
    }

    // 기타 모든 문서는 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}